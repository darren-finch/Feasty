<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Misc -->
        <item name="android:fontFamily">@font/monda</item>
        <item name="android:statusBarColor">@color/brand_red</item>
        <item name="android:actionOverflowButtonStyle">@style/AppTheme.ToolbarStyle.OverflowButtonStyle</item>

        <!-- Various styles -->
        <item name="cardViewStyle">@style/AppTheme.CardViewStyle</item>
        <item name="toolbarStyle">@style/AppTheme.ToolbarStyle</item>
        <item name="buttonStyle">@style/AppTheme.ButtonStyle</item>
        <item name="textInputStyle">@style/AppTheme.TextInputStyle</item>
        <item name="actionOverflowButtonStyle">@style/AppTheme.ToolbarStyle.OverflowButtonStyle</item>
        <item name="imageButtonStyle">@style/AppTheme.ImageButtonStyle</item>
        <item name="searchViewStyle">@style/AppTheme.SearchViewStyle</item>

        <!-- Text styles -->


        <!-- Color customization -->
        <item name="android:colorBackground">@color/brand_white</item>
        <item name="backgroundColor">@color/brand_white</item>
        <item name="colorOnBackground">@color/brand_dark_grey</item>
        <item name="colorPrimary">@color/brand_red</item>
        <item name="colorOnPrimary">@color/brand_white</item>
        <item name="colorSecondary">@color/brand_purple</item>
        <item name="colorOnSecondary">@color/brand_white</item>
        <item name="colorSurface">@color/brand_white</item>
        <item name="colorOnSurface">@color/brand_dark_grey</item>
    </style>

    <style name="AppTheme.ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="textAllCaps">false</item>
    </style>

    <style name="AppTheme.TextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">?attr/colorSurface</item>
    </style>

    <style name="AppTheme.ToolbarStyle" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="titleTextAppearance">?attr/textAppearanceHeadline5</item>
        <item name="titleTextColor">?attr/colorOnPrimary</item>
    </style>

    <style name="AppTheme.ImageButtonStyle" parent="Widget.AppCompat.ImageButton">
        <item name="android:tint">?attr/colorOnSurface</item>
    </style>

    <style name="AppTheme.SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="queryBackground">?attr/colorOnPrimary</item>
        <item name="submitBackground">?attr/colorOnPrimary</item>
        <item name="searchIcon">@drawable/ic_search</item>
        <item name="closeIcon">@drawable/ic_close</item>
        <item name="goIcon">@drawable/ic_go</item>
    </style>

    <style name="AppTheme.ToolbarStyle.OverflowButtonStyle" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">?attr/colorOnPrimary</item>
    </style>

    <style name="AppTheme.CardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">4dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cornerRadius">4dp</item>
    </style>

    <style name="AppTheme.BigCardViewStyle" parent="AppTheme.CardViewStyle">
        <item name="backgroundColor">?attr/backgroundColor</item>
        <item name="cardElevation">8dp</item>
        <item name="cardCornerRadius">6dp</item>
    </style>
</resources>
